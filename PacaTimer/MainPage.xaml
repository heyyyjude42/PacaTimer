<Page
    x:Class="PacaTimer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PacaTimer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20 50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="48" TextAlignment="Center">Select Timer</TextBlock>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="50">
            <Button Click="xWriting_Clicked" HorizontalAlignment="Stretch" Margin="5" Padding="15 5">Collaborative Writing</Button>
            <Button Click="xChallenge_Clicked" HorizontalAlignment="Stretch" Margin="5" Padding="15 5">Scholar's Challenge</Button>
            <Button Click="xCustom_Clicked" HorizontalAlignment="Stretch" Margin="5" Padding="15 5">Custom Timer</Button>
        </StackPanel>
        <CheckBox x:Name="xOneDay" IsChecked="false" Content="Use one-day timings" Grid.Row="2" HorizontalAlignment="Center"/>
    </Grid>
</Page>
